{% extends "layout.twig" %}

{% block content %}

<div class="row page">
    <header class="bk-header three columns">
        {{widget('logo', 'jerrys-logo', {"defaultlogo": asset('images/jerrys-logo.png')})|raw}}
        {{widget('companyname', 'jerrys-diner', {"business": "JERRY'S"})|raw}}
        {{widget('content', 'strapline', {content: '<h6>LOCAL & FRIENDLY</h6>', lines: 'all'})|raw}}
        {{widget('image', 'jerrys-image', { 'src': asset('/images/jerrys-img.jpg'), 'alt': 'my image', 'fileName': 'jerrys-img.jpg', 'fileSize': 'kb', 'imageSize': '', 'imageWidth': '100%'})|raw}}
        {{widget('extendednavigation', 'navigationheader', {})|raw}}
    </header>
    <div role ="main" class="nine columns">
        {{widget('gallery', 'featuregallery', {})|raw}}
    </div>
</div>
<div class="row">
    <footer class="bk-footer">
        <div class="three columns">
            {{widget('clicktocall', 'footer-phone', {phoneText: '0800 123 123'})|raw}}
        </div>
        <div class="nine columns">
            {{widget('companyaddress', 'footer-address', {})|raw}}
        </div>
    </footer>
</div>

{% endblock %}